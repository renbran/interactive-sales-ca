{
  "name": "scholarix-crm",
  "version": "1.0.0",
  "description": "Scholarix CRM - Sales and Lead Management System",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "worker:dev": "wrangler dev",
    "worker:deploy": "wrangler deploy",
    "worker:deploy:dev": "wrangler deploy --env development",
    "db:create": "wrangler d1 create scholarix-crm-db",
    "db:migrate": "wrangler d1 execute scholarix-crm-db --file=./migrations/0001_initial_schema.sql",
    "db:migrate:dev": "wrangler d1 execute scholarix-crm-db-dev --file=./migrations/0001_initial_schema.sql --local",
    "db:query": "wrangler d1 execute scholarix-crm-db --command",
    "r2:create": "wrangler r2 bucket create scholarix-recordings",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
