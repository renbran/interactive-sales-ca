{
  "name": "scholarix-crm-worker",
  "version": "1.0.0", 
  "description": "Cloudflare Worker API for Scholarix CRM",
  "main": "src/worker.ts",
  "scripts": {
    "dev": "wrangler dev --env development",
    "deploy": "wrangler deploy --env production",
    "deploy:staging": "wrangler deploy --env staging",
    "db:create": "wrangler d1 create scholarix-crm",
    "db:migrate": "wrangler d1 execute scholarix-crm --file=database-schema.sql",
    "db:migrate:staging": "wrangler d1 execute scholarix-crm-staging --file=database-schema.sql"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/bcryptjs": "^2.4.6",
    "wrangler": "^3.0.0"
  }
}